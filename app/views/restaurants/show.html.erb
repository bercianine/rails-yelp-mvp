<div class="row justify-content-center d-flex" style="gap: 16px;">
      <div class="card pt-2" style="width: 48rem;">
        <div class="card-body">
          <%= link_to "ã€± Back to all restaurants", restaurants_path, class: "card-text text-secondary" %>
          <h3 class="card-title mb-4 mt-4"><%= @restaurant.name %></h3>
          <div class="d-flex" style="gap: 8px;">
            <p class="card-text text-secondary"><i>Address:</i></p>
            <p class="card-text"><%= @restaurant.address %></p>
          </div>
          <div class="d-flex" style="gap: 8px;">
            <p class="card-text text-secondary"><i>Phone number:</i></p>
            <p class="card-text"><%= @restaurant.phone_number %></p>
          </div>
          <div class="d-flex" style="gap: 8px;">
            <p class="card-text text-secondary"><i>Category:</i></p>
            <p class="card-text"><%= @restaurant.category.capitalize %></p>
          </div>
          <div class="d-flex justify-content-between mb-4 mt-4">
            <h5 class="card-title">Reviews</h5>
            <%= link_to "Add a review", review_new_path(restaurant_id: @restaurant.id), class: "btn btn-primary" %>
          </div>
          <% @reviews.each do |review| %>
            <div class="card pt-2 w-100">
              <div class="card-body d-flex" style="gap: 40px;">
                <div class="d-flex" style="gap: 8px;">
                  <p class="card-text text-secondary"><i>Rating:</i></p>
                  <p class="card-text"><%= review.rating %></p>
                </div>
                <div class="d-flex" style="gap: 8px;">
                  <p class="card-text text-secondary"><i>Content:</i></p>
                  <p class="card-text"><%= review.content %></p>
                </div>
              </div>
            </div>
          <% end %>
        </div>
      </div>
</div>
