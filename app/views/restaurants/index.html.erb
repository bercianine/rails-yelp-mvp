<% @restaurants.each_slice(3) do |restaurant_set| %>
  <div class="row mb-3">
    <div class="col-12 justify-content-center d-flex" style="gap: 16px;">
      <% restaurant_set.each do |restaurant| %>
          <%= link_to(restaurant_path(restaurant)) do %>
            <div class="card" style="width: 18rem;">
              <div class="card-body">
                <div class="mb-3">
                  <h5 class="card-title"><%= restaurant.name %></h5>
                  <p class="card-text"><%= restaurant.address %></p>
                </div>
              </div>
            </div>
          <% end %>
      <% end %>
    </div>
  </div>
<% end %>
<br>
<div class="row justify-content-center">
  <div class="col-12 text-center">
    <%= link_to "New restaurant", restaurants_new_path, class: "btn btn-primary mt-3" %>
  </div>
</div>
