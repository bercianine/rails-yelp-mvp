<div class="row justify-content-center">
  <div class="col-12 col-lg-4">
    <h4 class="text-center mb-5">👩‍🍳 New Restaurant</h4>
  </div>
</div>
<div class="row justify-content-center">
  <div class="col-4">
    <%= simple_form_for [@restaurant, @review] do |f| %>
      <%= f.input :rating %>
      <%= f.input :content %>
      <%= f.hidden_field :restaurant_id, value: @restaurant.id %>
      <div class="d-flex" style="gap: 16px;">
        <%= link_to "Cancel", restaurant_path(@restaurant), class: "btn btn-outline-secondary w-100 mt-4" %>
        <%= f.button :submit, { class: "btn btn-primary w-100 mt-4" } %>
      </div>
    <% end %>
  </div>
</div>
